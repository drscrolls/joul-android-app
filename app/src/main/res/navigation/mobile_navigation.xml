<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.joul.ui.feed.FeedFragment"
        tools:layout="@layout/fragment_feed"
        android:label="@string/title_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.joul.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.joul.ui.chat.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_connections"
        android:name="com.example.joul.ui.connections.ConnectionsFragment"
        android:label="Connections"
        tools:layout="@layout/fragment_connections" />
